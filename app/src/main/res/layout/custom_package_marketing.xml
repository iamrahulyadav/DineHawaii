<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@drawable/bootomline_gray_back_trans"
        android:orientation="horizontal">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/packageNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.9"
            android:gravity="center|left"
            android:text="Package Title"
            android:textSize="@dimen/_10sdp"
            app:edittextfont="Roboto-Regular.ttf" />

        <ImageView
            android:id="@+id/plusImageView"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@drawable/ic_add_black_24dp"
            android:gravity="right" />
    </LinearLayout>

    <com.yberry.dinehawaii.customview.CustomTextView
        android:id="@+id/packageDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="@dimen/_8sdp"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Package Title"
        android:textSize="@dimen/_10sdp"
        app:edittextfont="Roboto-Regular.ttf" />

</LinearLayout>