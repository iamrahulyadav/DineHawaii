<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yberry.dinehawaii.customview.CustomTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar_bar"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="Please select the paypal link below to initiate payment for your order .you may login to your paypal account or make payment using your credit card or bank account."
            android:textColor="@color/blue"
            app:edittextfont="@string/raleway_regular" />


        <com.yberry.dinehawaii.customview.CustomCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:backgroundTint="@color/offwhite"
            android:drawableRight="@drawable/paypal"
            app:edittextfont="@string/raleway_regular" />

    </LinearLayout>


    <com.yberry.dinehawaii.customview.CustomButton
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/greenborder"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:text="PAY"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>