                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:text="Delivery Date"
                                    app:edittextfont="@string/raleway_regular" />
                            </RelativeLayout>

                            <RelativeLayout
