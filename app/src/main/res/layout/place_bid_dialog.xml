<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">
    <com.yberry.dinehawaii.customview.CustomTextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Bid Details"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"
        app:edittextfont="@string/raleway_bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvFreq"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/greendot"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Order Frequency(in days)"
            android:textColor="@color/green"
            app:edittextfont="@string/raleway_bold" />

        <com.yberry.dinehawaii.customview.CustomEditText
            android:id="@+id/etOrderFreq"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            app:edittextfont="@string/raleway_regular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvstartdate"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/greendot"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Bid Start Date"
            android:textColor="@color/green"
            app:edittextfont="@string/raleway_bold" />

        <com.yberry.dinehawaii.customview.CustomEditText
            android:id="@+id/etStartDate"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="Start Date"
            android:inputType="datetime"
            android:layout_marginLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textAlignment="center"
            app:edittextfont="Raleway-Regular.ttf" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/tvenddate"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:text="Bid End Date"
                android:textColor="@color/green"
                app:edittextfont="@string/raleway_bold" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/etEndDate"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:hint="Select End Date"
                android:layout_marginLeft="@dimen/_10sdp"
                android:inputType="datetime"
                android:textAlignment="center"
                app:edittextfont="Raleway-Regular.ttf" />
        </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/tvterms"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:text="Your Terms &amp; Conditions"
                android:textColor="@color/green"
                app:edittextfont="@string/raleway_bold" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/etTermsCondt"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/cart_borders"
                android:hint="Enter Terms &amp; Conditions"
                android:inputType="text"
                android:maxLines="4"
                android:padding="@dimen/_20sdp"
                app:edittextfont="Raleway-Regular.ttf" />


            <com.yberry.dinehawaii.customview.CustomButton
                android:id="@+id/btnSubmitBid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/greenborder"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:text="submit"
                android:textColor="@color/white" />

        </LinearLayout>