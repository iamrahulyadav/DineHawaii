<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/recycler_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Date : "
                android:textStyle="bold"
                app:edittextfont="Roboto-MEDIUM.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"

                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="06-May-17"
                app:edittextfont="Roboto-LIGHT.TTF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/customTextView9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Name : "

                        android:textStyle="bold"

                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"

                        android:singleLine="true"
                        android:text="James Hopes"
                        app:edittextfont="Roboto-LIGHT.TTF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Order Time : "

                        android:textStyle="bold"

                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/orderTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="04:00 pm"

                        app:edittextfont="Roboto-LIGHT.TTF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Total :$ "

                        android:textStyle="bold"

                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/totalAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/bootomline_gray_back_trans"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="150.00"
                        app:edittextfont="Roboto-LIGHT.TTF" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Source : "
                        android:textStyle="bold"
                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/tvSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/bootomline_gray_back_trans"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="App"
                        app:edittextfont="Roboto-LIGHT.TTF" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"

                        android:singleLine="true"
                        android:text="Pickup Name : "

                        android:textStyle="bold"
                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/pickupNameNoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="James"

                        app:edittextfont="Roboto-LIGHT.TTF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/customTextView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Due Time : "
                        android:textStyle="bold"

                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/dueTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="05:00"
                        app:edittextfont="Roboto-LIGHT.TTF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Status : "

                        android:textStyle="bold"

                        app:edittextfont="Roboto-MEDIUM.TTF" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/statusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"

                        android:singleLine="true"
                        android:text="Pending"
                        android:textAllCaps="true"
                        app:edittextfont="Roboto-LIGHT.TTF" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
