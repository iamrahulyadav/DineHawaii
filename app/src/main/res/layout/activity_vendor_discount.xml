<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bussiness_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@color/transparent_full"
        android:padding="@dimen/_8sdp"
        android:text=""
        android:textColor="#000"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/greendot"
                    android:drawablePadding="@dimen/_6sdp"
                    android:gravity="fill_vertical"
                    android:text="Delivery Available :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    app:edittextfont="Raleway-Bold.ttf" />

                <RadioGroup
                    android:id="@+id/radioDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/avail_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:checked="false"
                        android:text="Yes"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioButton
                        android:id="@+id/avail_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:text="No"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </RadioGroup>

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:drawableLeft="@drawable/help"
                    android:drawablePadding="@dimen/_6sdp"
                    android:gravity="center_vertical"
                    app:edittextfont="Raleway-Bold.ttf"

                    />
            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="fill_vertical"
                android:padding="@dimen/_5sdp"
                android:text="PAYMENT TERMS(SELECT ONE):"

                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="bold"
                app:edittextfont="Raleway-Bold.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableRight="@drawable/help"
                android:gravity="fill_vertical"
                android:text="Customer Pre-Payment Required"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioPrePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pre_payment_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:buttonTint="@color/green"
                        android:checked="false"
                        android:text="Yes"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioButton
                        android:id="@+id/pre_payment_no"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:text="No"
                        android:textColor="@color/green"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </RadioGroup>
            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableRight="@drawable/help"
                android:gravity="fill_vertical"
                android:text="COD-Payment Delivery Option:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioCODPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/delivery_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:buttonTint="@color/green"
                        android:text="Yes"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioButton
                        android:id="@+id/delivery_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:checked="false"
                        android:text="No"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </RadioGroup>
            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableRight="@drawable/help"
                android:gravity="fill_vertical"
                android:text="Generate DINE Invoice for Customer"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/invoice_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:buttonTint="@color/green"
                        android:checked="false"
                        android:text="Yes"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioButton
                        android:id="@+id/invoice_no"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:text="No"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </RadioGroup>
            </LinearLayout>

            <!--
                        <com.yberry.dinehawaii.customview.CustomTextView
                            app:edittextfont="Raleway-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/greendot"
                            android:drawablePadding="@dimen/_6sdp"
                            android:gravity="fill_vertical"
                            android:text="Generate DINE Invoice for Customer"
                            android:drawableRight="@drawable/help"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            -->
