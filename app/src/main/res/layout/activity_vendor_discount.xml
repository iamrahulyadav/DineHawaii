                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/green"
                                android:text="No"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/gray"/>
                        </LinearLayout>
            -->

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableRight="@drawable/help"
                android:gravity="fill_vertical"
                android:text="Business will mail Invoice to Customer"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioMailInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mail_invoce_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:buttonTint="@color/green"
                        android:text="Yes"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioButton
                        android:id="@+id/mail_invoce_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green"
                        android:checked="false"
                        android:text="No"
                        android:textColor="@color/gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/llBussiness"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cont" />

            </RelativeLayout>
            <!--
                        <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_78sdp"
                            android:layout_marginRight="@dimen/_18sdp"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:src="@drawable/cont" />
            -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>