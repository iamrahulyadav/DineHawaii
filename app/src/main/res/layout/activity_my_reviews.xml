<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_reviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activityBackground"
    tools:context="com.yberry.dinehawaii.Customer.Fragment.MyReviews">
    <com.yberry.dinehawaii.customview.CustomTextView
        android:id="@+id/noreviews"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:text="No Reviews Available"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@drawable/text_background"
        android:visibility="gone"
        style="@style/TextAppearance.AppCompat.Subhead"
        app:edittextfont="Raleway-Regular.ttf"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/review_recycler"></android.support.v7.widget.RecyclerView>

</LinearLayout>
