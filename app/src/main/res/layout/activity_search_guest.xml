<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_guest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yberry.dinehawaii.activity.SearchGuestActivity">

    <include
        android:id="@+id/toolbar_bar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_bar"
        android:orientation="vertical">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/peragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_bar"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:padding="10dp"
            android:text="Your Requested Business is not providing DINE Hawaii Services, i.e. Reservations and Online Ordering. You can invite your favorite Business to provide these and many other DINE Hawaii services :  "
            app:edittextfont="Raleway-Regular.ttf"/>

        <RelativeLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/peragraph"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_transparent">

            <LinearLayout
                android:id="@+id/linearSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send" />

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SEND INVITATION :"
                    android:textSize="16sp"
                    app:edittextfont="Raleway-Bold.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearSend"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="Email-Address"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="Phone#"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:text="Enter email address"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:edittextfont="Raleway-Regular.ttf"/>

            <TextView
                android:id="@+id/sendButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/etEmail"
                android:layout_centerInParent="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/greenborder"
                android:padding="10dp"
                android:text="SEND"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mapgreen" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/emailgreen" />

    </RelativeLayout>

</RelativeLayout>