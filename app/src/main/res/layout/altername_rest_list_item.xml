<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="1dp"
    app:contentPadding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/restLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_placeholder" />
        </android.support.v7.widget.CardView>

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvBussName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardLogo"
            android:text="Sayaji"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvBussAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBussName"
            android:layout_toRightOf="@id/cardLogo"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Indore"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBussAddr"
            android:layout_toRightOf="@id/cardLogo"
            android:text="0km"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDistance"
            android:layout_toRightOf="@id/cardLogo"
            android:text="Available Table"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

    </RelativeLayout>
</android.support.v7.widget.CardView>