<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.yberry.dinehawaii.customview.CustomCheckBox
            android:layout_centerVertical="true"
            android:id="@+id/chk_bussineId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/blue"
            style="@style/TextAppearance.AppCompat.Subhead"
            app:edittextfont="Raleway-Regular.ttf"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right|center"
        android:id="@+id/ed_layout"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/edit_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/ic_edit_black_24dp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_5sdp"
            android:id="@+id/delete_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/ic_delete_red_24dp"
            />
    </LinearLayout>
</LinearLayout>


