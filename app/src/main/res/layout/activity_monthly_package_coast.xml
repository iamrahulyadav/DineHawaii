<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monthly_package_coast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Monthly Package Cost"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cross"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_close_white_24dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/gray"></View>
        <!--
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        -->


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_margin="10dp"
                android:gravity="center_horizontal">

                <TextView

                    android:id="@+id/firstPackage"
                    android:maxLength="15"
                    android:text="Manage and Confirm Reserv"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginRight="40dp"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:text="$"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/firstcost"
                    android:text="49"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_margin="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/secondPackage"
                    android:layout_marginRight="40dp"
                    android:maxLength="15"
                    android:text="Walk-in Table Assignments"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginRight="40dp"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:text="$"

                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/secondcost"
                    android:text="79"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_margin="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/thirdPackage"
                    android:layout_marginRight="40dp"
                    android:maxLength="15"
                    android:text="Take-out and OnlinePayments"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginRight="40dp"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:text="$"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/thirdcost"
                    android:text="99"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_margin="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/fourthPackage"
                    android:layout_marginRight="40dp"
                    android:maxLength="15"
                    android:text="Food,supply,Service Ordering"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginRight="40dp"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:text="$"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/fourthcost"
                    android:text="109"
                    android:textColor="@color/white" />

            </TableRow>


        </TableLayout>
    </LinearLayout>
</RelativeLayout>
