<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="1dp"
    app:contentPadding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/restLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_placeholder" />
        </android.support.v7.widget.CardView>

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvBussName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardLogo"
            android:text="Sayaji"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvBussAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBussName"
            android:layout_toRightOf="@id/cardLogo"
            android:text="Indore"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBussAddr"
            android:layout_toRightOf="@id/cardLogo"
            android:text="abc@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/tvContactNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmail"
            android:layout_toRightOf="@id/cardLogo"
            android:text="989889989"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContactNo"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Login"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/tvRemove"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Disable"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>