<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reservation_pacakage"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.yberry.dinehawaii.activity.ReservationPacakageActivity">

    <include
        android:id="@+id/toolbar_bar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/llReservation"></LinearLayout>
    <com.yberry.dinehawaii.customview.CustomTextView
        android:id="@+id/tvVerified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_bar"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        app:edittextfont="Roboto-Regular.ttf"
        android:text="Reservation Conformation"
        android:textColor="@color/edit_text_color"
        style="@style/TextAppearance.AppCompat.Subhead"/>

    <com.yberry.dinehawaii.customview.CustomTextView
        android:id="@+id/tvReplay"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVerified"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_10sdp"
        app:edittextfont="Roboto-Regular.ttf"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:text="Please reply to this message to confirm your reservation at__________on Saturday,December 15,2016 at 7:00 p.m.for a party of 4.No reply will result in reservation cancellation and deposit forfeiture.  "
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_next"
        android:layout_below="@+id/tvReplay"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_29sdp"
        android:background="@drawable/greenborder"
        android:text="NEXT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingRight="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"/>

</RelativeLayout>