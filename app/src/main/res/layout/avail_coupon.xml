<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:elevation="1dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            ></View>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:id="@+id/main"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/coupon_back"
            android:layout_height="wrap_content">
            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/cpnCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="NA"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textIsSelectable="true"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:edittextfont="Raleway-Bold.ttf" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/main"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    app:edittextfont="Raleway-Regular.ttf" />
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    app:edittextfont="Raleway-Regular.ttf"/>

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/cpnAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:singleLine="true"
                    android:text="NA"
                    style="@style/TextAppearance.AppCompat.Subhead"

                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
             >

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Exp. Date"
                    style="@style/TextAppearance.AppCompat.Subhead"

                    app:edittextfont="Raleway-Regular.ttf" />
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    app:edittextfont="Raleway-Regular.ttf"/>

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/cpnEnd"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="NA"
                    style="@style/TextAppearance.AppCompat.Subhead"

                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    style="@style/TextAppearance.AppCompat.Subhead"
                    app:edittextfont="Raleway-Regular.ttf"/>
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text=":"
                    app:edittextfont="Raleway-Regular.ttf" />
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/cpnStatus"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    style="@style/TextAppearance.AppCompat.Subhead"

                    android:singleLine="true"
                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>