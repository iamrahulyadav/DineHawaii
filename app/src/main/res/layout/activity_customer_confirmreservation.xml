<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_making_reservation_next_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground">

    <include
        android:id="@+id/toolbar_bar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_bar"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_2sdp"
            app:contentPadding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.yberry.dinehawaii.customview.CustomTextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:text="@string/MakingResTxt1"
                    android:textColor="@color/green"
                    app:edittextfont="Raleway-Bold.ttf" />

                <com.yberry.dinehawaii.customview.CustomTextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Reservation Details :"
                    android:textColor="@color/green"
                    app:edittextfont="Raleway-Bold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Name"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:text=":"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/rescustname"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="NA"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Date"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_5sdp"

                        android:text=":"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/resdate"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="NA"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Time"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_5sdp"

                        android:text=":"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/restime"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="NA"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:orientation="horizontal">

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:singleLine="true"
                        android:text="Pre-Amount"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text=":"
                        app:edittextfont="Raleway-Regular.ttf" />

                    <com.yberry.dinehawaii.customview.CustomTextView
                        android:id="@+id/resamt"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:singleLine="true"
                        android:text="NA"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>

                <com.yberry.dinehawaii.customview.CustomButton
                    android:id="@+id/btnDone"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/greenborder"
                    android:gravity="center_vertical"
                    android:text="pay"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:edittextfont="Raleway-bold.ttf" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>