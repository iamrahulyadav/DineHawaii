<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/checkbox"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Agree To Terms &amp; Condition."
            app:edittextfont="@string/raleway_regular" />

        <com.yberry.dinehawaii.Util.JustifiedTextView
            android:id="@+id/justifytxt"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/text_21B"
            android:textAlignment="center"
            app:edittextfont="@string/raleway_regular" />
        <!--  <com.yberry.dinehawaii.customview.CustomTextView
              android:id="@+id/justifytxt"
              style="@style/TextAppearance.AppCompat.Small"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_8sdp"
              android:text="@string/text_21B"
              android:textAlignment="center"
              app:edittextfont="@string/raleway_regular" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.yberry.dinehawaii.customview.CustomButton
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/greenborder"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="I Accept"
            android:textColor="@color/white"
            android:visibility="visible" />

        <com.yberry.dinehawaii.customview.CustomButton
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/grayborderround"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="Reject"
            android:textColor="@color/white"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>