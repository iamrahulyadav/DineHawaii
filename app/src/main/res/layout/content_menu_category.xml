<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:elevation="1dp"
    android:orientation="vertical"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/itemsMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content">
                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    style="@style/TextAppearance.AppCompat.Subhead"
                    app:edittextfont="Raleway-Bold.ttf" />

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="NA"
                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/linear1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Price : $ "
                    style="@style/TextAppearance.AppCompat.Subhead"
                    app:edittextfont="Raleway-Bold.ttf" />

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Half Price : $ "
                    app:edittextfont="Raleway-Bold.ttf" />

                <com.yberry.dinehawaii.customview.CustomTextView
                    android:id="@+id/item_halfprice"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content"
                    android:text="00"
                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:text="Make Sold Out"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/switchSoldOut"
                android:layout_width="wrap_content"
                android:switchPadding="@dimen/_5sdp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/deleteFood"
                android:src="@drawable/ic_delete_red_24dp"/>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>