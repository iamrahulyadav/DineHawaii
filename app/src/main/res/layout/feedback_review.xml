<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Please Rate Dine Hawaii Application"
                android:textColor="#686464"
                app:edittextfont="Raleway-Bold.ttf"

                />


            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/entermsg"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="Enter additional question you would like to ask "
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />
            />

            <com.yberry.dinehawaii.customview.CustomEditText

                android:id="@+id/etQues1"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_allow"
                android:drawablePadding="@dimen/_18sdp"
                android:gravity="left"
                android:hint="Enter Your Question"
                android:maxLength="100"
                android:paddingBottom="@dimen/_18sdp"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_18sdp"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="How did you access the app"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />

            <LinearLayout
                android:id="@+id/linearCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="3">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radiogrp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/cbIos"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/green"
                        android:text="IOS"
                        android:textColor="#686464" />

                    <RadioButton
                        android:id="@+id/cbAndroid"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:checked="true"
                        android:buttonTint="@color/green"
                        android:gravity="center"
                        android:text="ANDROID"
                        android:textColor="#686464" />
                </RadioGroup>



            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Ease of use"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/easeuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Accountancy of Business Information"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/businfo"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Responsiveness of App"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/respapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:layout_marginRight="15dp"
                style="@style/TextAppearance.AppCompat.Small"
                android:inputType="text"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Report a closed Business Name"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf"

                />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/etBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                style="@style/TextAppearance.AppCompat.Small"
                android:singleLine="true"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/radioRecomended"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_actionbar"
                android:layout_marginTop="@dimen/_5sdp"
                android:buttonTint="@color/colorPrimary"
                android:drawableLeft="@drawable/greendot"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Recommendation App Improvements"
                android:textColor="#686464"
                app:edittextfont="Raleway-Regular.ttf" />


            <com.yberry.dinehawaii.customview.CustomEditText
                android:id="@+id/etTextMsg"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_allow"
                android:drawablePadding="@dimen/_18sdp"
                android:gravity="left"
                android:hint="Max 100 words"
                android:maxLength="100"
                android:paddingBottom="@dimen/_18sdp"
                android:paddingLeft="@dimen/_18sdp"

                android:paddingTop="@dimen/_18sdp"
                app:edittextfont="Raleway-Regular.ttf" />

            <Button
                android:id="@+id/submit"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/greenborder"
                android:text="SUBMIT"
             
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>