<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_thank_you_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yberry.dinehawaii.Customer.Activity.ThankYouScreenActivity">




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_centerInParent="true"

            android:layout_height="match_parent">
            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THANK YOU !!"
                app:edittextfont="@string/raleway_bold"
                android:textColor="@color/green"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_gravity="center_horizontal"/>
            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Your reciept will be emailed to you"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/edit_text_color"
                app:edittextfont="Raleway-Bold.ttf"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:layout_margin="@dimen/_50sdp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/thanks"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:text="GO TO HOME"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/gotoHome"
                android:background="@drawable/greenborder"/>
        </LinearLayout>
</RelativeLayout>





