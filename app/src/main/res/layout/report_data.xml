<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:elevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">
            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/mbusiness_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Business Name"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />


            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/mbusiness_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"

                android:text="Dine Id"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />


            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/maddded_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:maxLength="22"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Added by"
                android:textSize="@dimen/_10sdp"

                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/memail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"

                android:gravity="center"
                android:maxLength="22"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"

                android:text="Email Id"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />


            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/mmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Mobile"
                android:textSize="@dimen/_10sdp"

                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/mname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"

                android:text="Name"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView

                android:id="@+id/mposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Position"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView

                android:id="@+id/mdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Date"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />
             <com.yberry.dinehawaii.customview.CustomTextView

                android:id="@+id/mtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="time"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView

                android:id="@+id/mpartsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Party Size"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.yberry.dinehawaii.customview.CustomTextView

                android:id="@+id/mtablename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="45dp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Table Name"
                android:textSize="@dimen/_10sdp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>















