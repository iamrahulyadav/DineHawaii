<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">
        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/textViewChairNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:layout_centerHorizontal="true"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_centerVertical="true"
            app:edittextfont="Raleway-Bold.ttf"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.yberry.dinehawaii.customview.CustomEditText
               android:id="@+id/textViewDescr"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Description"
               style="@style/TextAppearance.AppCompat.Subhead"
               app:edittextfont="Raleway-Regular.ttf"
               />
       </LinearLayout>

    <RadioGroup
        android:id="@+id/rgroup_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="#bc353535"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radio_handicapped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handicapped"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="#bc353535"/>

    </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15">
        <com.yberry.dinehawaii.customview.CustomButton
            android:id="@+id/buttonSave"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="Save"
            android:background="@drawable/button_rounded"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorPrimary"
            app:edittextfont="Raleway-Bold.ttf"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>