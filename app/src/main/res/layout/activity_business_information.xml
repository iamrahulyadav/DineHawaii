<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/businessNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:drawableLeft="@drawable/drawable_green_dot"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/help"
                android:gravity="center"
                android:text="Business Name"
                android:textColor="@color/green"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.yberry.dinehawaii.customview.CustomEditText
                    android:id="@+id/business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Business Name"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/gray"
                    app:edittextfont="Raleway-Regular.ttf" />
            </LinearLayout>

            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/drawable_green_dot"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/help"
                android:gravity="center"
                android:text="Physical Address"
                android:textColor="@color/green"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:edittextfont="Raleway-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bootomline_gray_back_trans"
                        >
                        <Spinner
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            android:textColor="@color/gray"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            ></Spinner>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"

                        >
                        <Spinner
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/gray"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:layout_marginRight="@dimen/_5sdp"
                        >
                        <Spinner
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/gray" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:layout_marginLeft="@dimen/_5sdp"
                        >
                        <com.yberry.dinehawaii.customview.CustomEditText
                            android:id="@+id/zipCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:hint="Zip Code"
                            android:maxLength="6"
                            android:inputType="number"
                            android:background="@null"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_marginLeft="@dimen/_8sdp"
                            app:edittextfont="Raleway-Regular.ttf" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.yberry.dinehawaii.customview.CustomEditText
                        android:id="@+id/locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Locality"
                        android:layout_marginLeft="@dimen/_8sdp"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:maxLines="2"
                        android:paddingTop="@dimen/_5sdp"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/gray"
                        app:edittextfont="Raleway-Regular.ttf" />
                    <com.yberry.dinehawaii.customview.CustomEditText
                        android:id="@+id/street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:maxLines="3"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:textColor="@color/gray"
                        android:focusableInTouchMode="false"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>
            </LinearLayout>



            <com.yberry.dinehawaii.customview.CustomTextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/drawable_green_dot"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/help"
                android:gravity="center"
                android:text="Mailing Address"
                android:textColor="@color/green"
                style="@style/TextAppearance.AppCompat.Subhead"

                app:edittextfont="Raleway-Bold.ttf" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bootomline_gray_back_trans"
                        >
                        <Spinner
                            android:id="@+id/mail_country"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/gray"
                            ></Spinner>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"

                        >
                        <Spinner
                            android:id="@+id/mail_state"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/gray"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:layout_marginRight="@dimen/_5sdp"
                        >
                        <Spinner
                            android:id="@+id/mail_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:spinnerMode="dialog"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/gray" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/bootomline_gray_back_trans"
                        android:layout_marginLeft="@dimen/_5sdp"
                        >
                        <com.yberry.dinehawaii.customview.CustomEditText
                            android:id="@+id/mail_zipCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:hint="Zip Code"
                            android:maxLength="6"
                            android:inputType="number"
                            android:background="@null"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_marginLeft="@dimen/_8sdp"
                            app:edittextfont="Raleway-Regular.ttf" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bootomline_gray_back_trans"
                    >
                    <com.yberry.dinehawaii.customview.CustomEditText
                        android:id="@+id/mail_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:hint="Street"
                        android:maxLines="3"
                        android:focusableInTouchMode="false"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:singleLine="true"
                        android:background="@null"
                        android:textColor="@color/gray"
                        app:edittextfont="Raleway-Regular.ttf" />
                </LinearLayout>
            </LinearLayout>


