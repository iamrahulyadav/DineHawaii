<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reviews"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yberry.dinehawaii.activity.FeedbackandReviewActivity">

    <include
        android:id="@+id/toolbar_bar"
        layout="@layout/toolbar" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_reviews_cus"
        android:layout_below="@+id/toolbar_bar"
        android:orientation="vertical">
        <com.yberry.dinehawaii.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/Reviews_97"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Subhead"
            app:edittextfont="@string/raleway_regular" />

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stepSize="1"
            android:rating="0"
            android:scaleX=".5"
            android:scaleY=".5" />

        <com.yberry.dinehawaii.customview.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:id="@+id/etQues1"
            android:maxLines="2"
            app:edittextfont="Raleway-Regular.ttf"
            android:padding="@dimen/_10sdp"
            android:hint="Tell us what you think"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textAlignment="center"
            />

        <com.yberry.dinehawaii.customview.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:id="@+id/btnSub"
            app:edittextfont="Raleway-Bold.ttf"
            android:background="@drawable/greenborder"
            android:text="SEND"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>