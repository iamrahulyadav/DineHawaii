<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feeback_96"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yberry.dinehawaii.activity.FeedbackandReviewActivity">

    <include
        android:id="@+id/toolbar_bar"
        layout="@layout/toolbar" />

    <com.yberry.dinehawaii.customview.CustomTextView
        android:layout_below="@id/toolbar_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@color/transparent_full"
        android:padding="@dimen/_5sdp"
        android:text="Screen No:96"
        android:textColor="@color/screen_no_text"
        style="@style/TextAppearance.Compat.Notification.Time"
        app:edittextfont="Raleway-Bold.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_view"
        android:layout_below="@+id/toolbar_bar"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.yberry.dinehawaii.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="@string/Feedback_96"
                android:textAlignment="center"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:edittextfont="@string/raleway_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yberry.dinehawaii.customview.CustomTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/Feedback_96IHave"
                app:edittextfont="@string/raleway_regular" />

            <com.yberry.dinehawaii.customview.CustomEditText
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/feedback_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/bgrectangle"
                android:gravity="start"
                android:hint="Max 100 words"
                android:maxLines="4"
                android:padding="@dimen/_10sdp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textAlignment="textStart"
                app:edittextfont="Raleway-Regular.ttf" />

            <com.yberry.dinehawaii.customview.CustomButton
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/greenborder"
                android:text="SUBMIT"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/white"
                app:edittextfont="Raleway-Bold.ttf" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>