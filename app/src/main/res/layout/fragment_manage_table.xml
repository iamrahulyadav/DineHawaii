<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    tools:context="com.yberry.dinehawaii.Bussiness.Fragment.ManageMenuFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_bar"
            android:background="@color/white"
            android:elevation="1dp"
            android:minHeight="@dimen/_40sdp"
            android:scrollbars="vertical"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/TAB_Selected_Style"
            app:tabTextColor="#e0808080"></android.support.design.widget.TabLayout>
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/addNewTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:text="Add New Table"
            android:textAllCaps="true"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"
            app:edittextfont="@string/raleway_bold"
            />
    </RelativeLayout>
</RelativeLayout>
