<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yberry.dinehawaii.Customer.Fragment.SettingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/emailSwitchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:checked="true"
            android:drawableLeft="@drawable/drawable_green_dot"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:text="Email"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/gray"
            android:textColorHighlight="@color/colorPrimary"
            app:edittextfont="@string/raleway_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorDivider" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notifySwitchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:checked="true"
            android:drawableLeft="@drawable/drawable_green_dot"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:text="Notification"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColorHighlight="@color/colorPrimary"
            android:visibility="gone"
            app:edittextfont="Raleway-Bold.ttf" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/privacySwitchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:checked="true"
            android:drawableLeft="@drawable/drawable_green_dot"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:text="Privacy"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/gray"
            android:textColorHighlight="@color/colorPrimary"
            app:edittextfont="@string/raleway_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorDivider" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/autoSwitchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:checked="true"
            android:drawableLeft="@drawable/drawable_green_dot"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:text="Auto App Updates"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/gray"
            android:textColorHighlight="@color/colorPrimary"
            app:edittextfont="@string/raleway_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorDivider" />

        <com.yberry.dinehawaii.customview.CustomTextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/drawable_green_dot"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_12sdp"
            android:text="Logout"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/gray"
            app:edittextfont="@string/raleway_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/colorDivider" />

    </LinearLayout>
</RelativeLayout>